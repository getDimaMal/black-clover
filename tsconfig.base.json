{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@black-clover/client/redux": ["libs/client/redux/src/index.ts"],
      "@black-clover/client/services": ["libs/client/services/src/index.ts"],
      "@black-clover/client/ui": ["libs/client/ui/src/index.ts"],
      "@black-clover/server": ["libs/server/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
